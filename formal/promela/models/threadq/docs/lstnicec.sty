  {language=C,
   basicstyle=\ttfamily\small\color{blue},
   identifierstyle=\color{red!40!blue},
   commentstyle={\color{red}},
   keywordstyle=\color{black},
   classoffset=1,
   sensitive,%
   morestring=[b]",
   showstringspaces=false%
  }%

