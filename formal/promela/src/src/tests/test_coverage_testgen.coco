            os.symlink (fic.name, fic0)
            main_ml_promela0 ( main_ml_promela_arg_model_checker
                             , ((_1, _2) -> _0 -> fic0)
                             , False
                             , dir0
                             , 'testsuites_spfreechain01'
                             , 'testsuites_spfreechain01_no_uniform')
        testgen.write_unlink (write_unlink0)
